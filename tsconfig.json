{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "declaration": false,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "lib": [
        "dom",
        "es2018"
      ],
      "module": "esnext",
      "moduleResolution": "node",
      "outDir": "./dist/out-tsc",
      "resolveJsonModule": true,
      "sourceMap": true,
      "target": "es2015",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "angularCompilerOptions": {
      "fullTemplateTypeCheck": true,
      "strictInjectionParameters": true
    }
  }
